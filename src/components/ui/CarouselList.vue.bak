<template>
    <a-carousel :autoplay="autoplay" :dots="showDots" :effect="effect" class="velo-carousel">
        <div v-for="(item, index) in carouselData" :key="index" class="carousel-item">
            {{ item }}
        </div>
    </a-carousel>
</template>

<script setup lang="ts">
import { computed } from 'vue'
import { Carousel as ACarousel } from 'ant-design-vue'
import type { ComponentItem } from '../../types'

export interface CarouselListProps {
    item: ComponentItem
}

const props = defineProps<CarouselListProps>()

const carouselData = computed(() => props.item.props.carouselListData || [])
const autoplay = computed(() => props.item.props.carouselConfig?.autoplay !== false)
const showDots = computed(() => props.item.props.carouselConfig?.showDots !== false)
const effect = computed(() => props.item.props.carouselConfig?.effect || 'scrollx')
</script>

