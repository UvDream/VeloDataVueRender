<template>
    <a-button :type="buttonType" :size="buttonSize" :disabled="disabled" :loading="loading" :ghost="ghost"
        :danger="danger" class="velo-button" @click="handleClick">
        {{ buttonText }}
    </a-button>
</template>

<script setup lang="ts">
import { computed } from 'vue'
import { Button as AButton } from 'ant-design-vue'
import type { ComponentItem } from '../../types'

export interface ButtonProps {
    item: ComponentItem
}

const props = defineProps<ButtonProps>()
const emit = defineEmits<{
    click: []
}>()

const buttonText = computed(() => props.item.props.buttonText || '按钮')
const buttonType = computed(() => props.item.props.buttonType || 'primary')
const btnSize = computed(() => props.item.props.btnSize || 'middle')
const disabled = computed(() => props.item.props.disabled || false)
const loading = computed(() => props.item.props.loading || false)
const ghost = computed(() => props.item.props.ghost || false)
const danger = computed(() => props.item.props.danger || false)

const handleClick = () => {
    emit('click')
}
</script>

